<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jay.rxjava" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.jay.rxjava.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.jay.rxjava.HelloWorldActivity"
            android:label="@string/title_activity_hello_world" >
        </activity>
        <activity
            android:name="com.jay.rxjava.HelloWorldLifecycleActivity"
            android:label="@string/title_activity_hello_world_lifecycle" >
        </activity>
        <activity
            android:name="com.jay.rxjava.TransformationActivity"
            android:label="@string/title_activity_transformation" >
        </activity>
        <activity
            android:name="com.jay.rxjava.FilterActivity"
            android:label="@string/title_activity_filter" >
        </activity>
        <activity
            android:name="com.jay.rxjava.TransformUsingFlatMapActivity"
            android:label="@string/title_activity_transform_using_flat_map" >
        </activity>
        <activity
            android:name="com.jay.rxjava.ListFragmentActivity"
            android:label="@string/title_activity_transform_using_flat_map" >
        </activity>
        <activity
            android:name="com.jay.rxjava.WidgetViewObservablesActivity"
            android:label="@string/title_activity_edit_text_example" >
        </activity>
    </application>

</manifest>
